<div class="container">
	<div class="navbar">
		<div class="navbar-brand"><span class="brand-title">IDEABOX</span></div>
	</div>

	<div class="container" id="new-idea">
		<div class="form-group">
			<span class="col-md-3"><span class="new-title">NEW IDEA</span>
				<%= text_field_tag :idea_title, nil, placeholder: "Idea Title", class:"form-control form-control-lg" %>
			</span>
			<span class="col-md-8">
				<%= text_area_tag :idea_body, nil, placeholder: "Idea Body", class: "form-control form-control-lg col-md-10" %>
			</span>
		<span class="col-md-1">
		<button class="btn btn-primary btn-lg", id="create_idea">Save</button></span>
		<span class="col-md-12"><%= text_field_tag :tags, nil, placeholder: "Tags (Optional)", class:"form-control form-control-lg" %>
		</span>
		</div>
	</div>

	<div class="col-md-2 col-md-offset-10"><input type="text" class="form-control" placeholder="Search" id="searchbar" onkeyup="filter(this)"></div>

	<table class="table table-striped table-hover">

		<thead>
			<tr>
				<th width="15%">Title</th><th width="50%">Body</th><th>Quality</th><th>&nbsp;</th><th>&nbsp;</th>
			</tr>
		</thead>
		<tbody class="idea-box"></tbody>

	</table>
</div>