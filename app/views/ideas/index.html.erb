<div class="navbar">
	<div class="navbar-brand"><span class="brand-title">IDEABOX</span></div>
</div>
<div class="container">

	<div class="container" id="new-idea">
		<div class="form-group">
			<span class="col-md-3"><span class="new-title">NEW IDEA</span>
			<%= text_field_tag :idea_title, nil, placeholder: "Idea Title", class:"form-control form-control-lg" %>
		</span>
		<span class="col-md-8">
			<%= text_area_tag :idea_body, nil, placeholder: "Idea Body", class: "form-control form-control-lg col-md-10" %>
		</span>
		<span class="col-md-1">
			<button class="btn btn-primary btn-lg", id="create_idea">Save</button></span>
			<span class="col-md-12"><%= text_field_tag :idea_tags, nil, placeholder: "Tags (Optional)", class:"form-control form-control-lg" %>
			</span>
		</div>
	</div>
	<div class="container" id="drop-cont">
		<div class="dropdown col-md-2">
			<button class="btn btn-default dropdown-toggle" type="button" id="tag_filter" data-toggle="dropdown" aria-haspopup="true" aria-expanded="true">
				Existing Tags
				<span class="caret"></span>
			</button>
			<ul class="dropdown-menu" id="tag_list" aria-labelledby="tag_list">
				<li><a href='#' class='tag_group' id='all_ideas'>Show All Ideas</a></li>
				<li role="separator" class="divider"></li>
			</ul>
		</div>
		<div class="col-md-2 col-md-offset-8"><input type="text" class="form-control" placeholder="Search" id="searchbar" onkeyup="filter(this)"></div>
	</div>

	<table class="table table-striped table-hover">

		<thead>
			<tr>
				<th width="15%">Title</th><th width="45%">Body</th><th class='tag_column' width="15%">Tags</th><th width="15%">Quality</th><th width="5%">&nbsp;</th><th width="5%">&nbsp;</th>
			</tr>
		</thead>
		<tbody class="idea-box"></tbody>

	</table>
</div>